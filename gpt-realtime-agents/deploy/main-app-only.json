{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.38.33.27573",
      "templateHash": "4822794095598120276"
    }
  },
  "parameters": {
    "baseName": {
      "type": "string",
      "defaultValue": "contoso",
      "metadata": {
        "description": "Base name for resources"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "imageTag": {
      "type": "string",
      "defaultValue": "latest",
      "metadata": {
        "description": "Docker image tag to deploy"
      }
    },
    "acrLoginServer": {
      "type": "string",
      "metadata": {
        "description": "ACR login server"
      }
    },
    "acrUsername": {
      "type": "string",
      "metadata": {
        "description": "ACR username"
      }
    },
    "acrPassword": {
      "type": "securestring",
      "metadata": {
        "description": "ACR password"
      }
    },
    "containerEnvId": {
      "type": "string",
      "metadata": {
        "description": "Container Apps Environment ID"
      }
    },
    "azureGptRealtimeUrl": {
      "type": "string",
      "metadata": {
        "description": "Azure OpenAI Realtime URL"
      }
    },
    "webrtcUrl": {
      "type": "string",
      "metadata": {
        "description": "WebRTC URL"
      }
    },
    "azureOpenAIResourceId": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Azure OpenAI Resource ID for role assignment"
      }
    },
    "azureGptRealtimeDeployment": {
      "type": "string",
      "defaultValue": "gpt-realtime-2",
      "metadata": {
        "description": "Azure OpenAI Realtime Deployment Name"
      }
    },
    "azureGptRealtimeVoice": {
      "type": "string",
      "defaultValue": "verse",
      "metadata": {
        "description": "Azure OpenAI Realtime Voice"
      }
    }
  },
  "variables": {
    "uniqueSuffix": "[uniqueString(resourceGroup().id)]",
    "containerAppName": "[format('{0}-app-{1}', parameters('baseName'), variables('uniqueSuffix'))]",
    "tags": {
      "application": "Contoso AI Commerce",
      "environment": "production"
    }
  },
  "resources": [
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2023-05-01",
      "name": "[variables('containerAppName')]",
      "location": "[parameters('location')]",
      "tags": "[variables('tags')]",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "managedEnvironmentId": "[parameters('containerEnvId')]",
        "configuration": {
          "ingress": {
            "external": true,
            "targetPort": 8080,
            "allowInsecure": false,
            "traffic": [
              {
                "latestRevision": true,
                "weight": 100
              }
            ]
          },
          "registries": [
            {
              "server": "[parameters('acrLoginServer')]",
              "username": "[parameters('acrUsername')]",
              "passwordSecretRef": "acr-password"
            }
          ],
          "secrets": [
            {
              "name": "acr-password",
              "value": "[parameters('acrPassword')]"
            }
          ]
        },
        "template": {
          "containers": [
            {
              "name": "contoso-ai-commerce",
              "image": "[format('{0}/{1}:{2}', parameters('acrLoginServer'), parameters('baseName'), parameters('imageTag'))]",
              "resources": {
                "cpu": "[json('1.0')]",
                "memory": "2Gi"
              },
              "env": [
                {
                  "name": "AZURE_GPT_REALTIME_URL",
                  "value": "[parameters('azureGptRealtimeUrl')]"
                },
                {
                  "name": "WEBRTC_URL",
                  "value": "[parameters('webrtcUrl')]"
                },
                {
                  "name": "AZURE_GPT_REALTIME_DEPLOYMENT",
                  "value": "[parameters('azureGptRealtimeDeployment')]"
                },
                {
                  "name": "AZURE_GPT_REALTIME_VOICE",
                  "value": "[parameters('azureGptRealtimeVoice')]"
                },
                {
                  "name": "VITE_BACKEND_BASE_URL",
                  "value": "[format('https://{0}.{1}/api', variables('containerAppName'), reference(resourceId('Microsoft.App/managedEnvironments', split(parameters('containerEnvId'), '/')[8]), '2023-05-01').defaultDomain)]"
                }
              ]
            }
          ],
          "scale": {
            "minReplicas": 1,
            "maxReplicas": 3
          }
        }
      }
    },
    {
      "condition": "[not(empty(parameters('azureOpenAIResourceId')))]",
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2022-04-01",
      "name": "[guid(resourceId('Microsoft.App/containerApps', variables('containerAppName')), parameters('azureOpenAIResourceId'), 'cognitive-services-user')]",
      "properties": {
        "roleDefinitionId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', 'a97b65f3-24c7-4388-baec-2e87135dc908')]",
        "principalId": "[reference(resourceId('Microsoft.App/containerApps', variables('containerAppName')), '2023-05-01', 'full').identity.principalId]",
        "principalType": "ServicePrincipal"
      },
      "dependsOn": [
        "[resourceId('Microsoft.App/containerApps', variables('containerAppName'))]"
      ]
    }
  ],
  "outputs": {
    "containerAppName": {
      "type": "string",
      "value": "[variables('containerAppName')]"
    },
    "containerAppUrl": {
      "type": "string",
      "value": "[format('https://{0}', reference(resourceId('Microsoft.App/containerApps', variables('containerAppName')), '2023-05-01').configuration.ingress.fqdn)]"
    },
    "containerAppFqdn": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.App/containerApps', variables('containerAppName')), '2023-05-01').configuration.ingress.fqdn]"
    },
    "containerAppPrincipalId": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.App/containerApps', variables('containerAppName')), '2023-05-01', 'full').identity.principalId]"
    }
  }
}